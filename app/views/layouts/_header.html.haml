%header.navbar.navbar-fixed-top
	.container-fluid
		.navbar-header
		= link_to root_path do
			= image_tag('logo.png', class: "navbar-brand")
		%nav.collapse.navbar-collapse.bs-navbar-collapse
			%ul.nav.navbar-nav.navbar-right
				- if user_signed_in?
					- unless params[:controller] == "restaurants" && params[:action] == "new"
						- if current_user.role == true
							%li= link_to "Add New Restaurant", new_restaurant_path
					%li= link_to current_user.name, "#"
					%li= link_to "Logout", logout_path
				- else
					%li= link_to "Register", register_path
					%li= link_to "Login", login_path

					
